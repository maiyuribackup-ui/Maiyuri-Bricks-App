{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@maiyuri/ui": ["./packages/ui/src"],
      "@maiyuri/shared": ["./packages/shared/src"],
      "@maiyuri/auth": ["./services/auth/src"]
    }
  },
  "exclude": ["node_modules", "dist", ".next"]
}
