{
    "name": "maiyuri-bricks-app",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "typecheck": "turbo run typecheck",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "test": "turbo run test",
        "test:e2e": "cd apps/web && bun run test:e2e"
    },
    "devDependencies": {
        "globals": "^17.0.0",
        "lint-staged": "^15.0.0",
        "prettier": "^3.0.0",
        "turbo": "^2.0.0",
        "typescript": "^5.0.0"
    },
    "packageManager": "npm@10.0.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix --max-warnings 0",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ],
        "apps/web/src/**/*.{ts,tsx}": [
            "eslint --fix --max-warnings 0"
        ]
    }
}