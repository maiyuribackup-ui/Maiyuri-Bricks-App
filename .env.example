# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database (for Postgres MCP server)
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Anthropic (Claude) API
ANTHROPIC_API_KEY=sk-ant-your-key

# Google AI (Gemini) for STT/Embeddings
GOOGLE_AI_API_KEY=your-google-ai-key

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Brave Search (for MCP server)
BRAVE_API_KEY=your-brave-api-key

# GitHub (for MCP server)
GITHUB_PERSONAL_ACCESS_TOKEN=your-github-token

# Next.js
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Odoo CRM Integration
ODOO_URL=https://your-odoo-instance.com
ODOO_USER=your-odoo-email@example.com
ODOO_PASSWORD=your-odoo-password
ODOO_DB=your-database-name

# E2E Test Credentials (REQUIRED for running E2E tests)
# IMPORTANT: Never commit actual credentials - use secure password management
E2E_TEST_EMAIL=test@example.com
E2E_TEST_PASSWORD=your-secure-test-password
E2E_TEST_FOUNDER_EMAIL=founder@example.com
E2E_TEST_ACCOUNTANT_EMAIL=accountant@example.com
E2E_TEST_ENGINEER_EMAIL=engineer@example.com

# Test Base URL (optional, defaults to production)
TEST_BASE_URL=https://maiyuri-bricks-app.vercel.app

# AI Observability (Langfuse)
# Get keys from https://langfuse.com or your self-hosted instance
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
# Optional: For self-hosted Langfuse instances
# LANGFUSE_HOST=https://langfuse.your-domain.com

# AI Cost Alerting (optional)
AI_DAILY_COST_ALERT_USD=50
AI_ERROR_RATE_ALERT_PERCENT=5
